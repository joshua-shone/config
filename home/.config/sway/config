# Josh's Sway config
# Belongs at ~/.config/sway/config

# Set main modifier key to Alt
set $mod Mod1

# Set numlock
input * xkb_numlock enable

# Floating window dragging modifier key
floating_modifier $mod normal

# Terminal emulator
set $term alacritty

# Application launcher
# https://www.reddit.com/r/swaywm/comments/b0svce/wayland_native_application_launcher/eihubk0/
bindsym Mod4+space exec alacritty --title=launcher -e bash -c 'compgen -c | sort -u | fzf | xargs -r swaymsg -t command exec'
for_window [title="^launcher$"] floating enable, border none

# Wallpaper
output * bg #000000 solid_color
#output * bg ~/the_cat-1920x1080.jpg fill

# kill focused window
bindsym $mod+Shift+q kill

# Main app shortcuts
bindsym Mod4+w exec chromium
bindsym Mod4+Shift+w exec chromium --incognito
bindsym Mod4+e exec dolphin
bindsym Mod4+x exec kate
bindsym Mod4+c exec alacritty
bindsym Mod4+y exec chromium --app=http://localhost:8089
bindsym Mod4+s exec grim -g "$(slurp)" screenshot.png

# exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'

# reload the configuration file
bindsym $mod+Shift+c reload

#
# Layout stuff:
#
  # make all windows floating
  for_window [class="[.]*"] floating enable
  for_window [title="[.]*"] floating enable

  # Switch the current container between different layout styles
  bindsym $mod+s layout stacking
  bindsym $mod+w layout tabbed
  bindsym $mod+e layout toggle split

  # Make the current focus fullscreen
  bindsym $mod+f fullscreen

  # Toggle the current focus between tiling and floating mode
  bindsym $mod+Shift+space floating toggle

  # Swap focus between the tiling area and the floating area
  bindsym $mod+space focus mode_toggle

  # move focus to the parent container
  bindsym $mod+a focus parent

# Status Bar
exec waybar

include /etc/sway/config.d/*
